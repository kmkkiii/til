import BlueskyIcon from 'public/icons/bluesky_media_kit_logo_svgs.svg';
import { Image } from 'astro:assets';
import { Separator } from '@/components/ui/separator';
import { Button } from '@/components/ui/button';
---

<footer class="text-center">
  <div>
    <div class="flex justify-center h-5 m-4 items-center space-x-3 text-sm">
      <Button variant="link">
        <a href="https://github.com/kmkkiii" target="_blank"><GitHubIcon width={30} height={28} /></a>
      </Button>
      <Separator orientation="vertical" />
      <Button variant="link">
        <a href="https://x.com/kmkkiii" target="_blank"><XIcon width={18} height={18} /></a>
      </Button>
      <Separator orientation="vertical" />
      <Button variant="link">
        <a href="https://bsky.app/profile/kmkkiii.github.io" target="_blank"><BlueskyIcon width={34} height={34} /></a>
      </Button>
      <Separator orientation="vertical" />
      <Button variant="link">
        <a href="https://qiita.com/kmkkiii" target="_blank"><Image src={QiitaIcon} alt="Qiitaプロフィールページへのリンクアイコン" height={24} class="min-w-[24px]" /></a>
      </Button>
      <Separator orientation="vertical" />
      <Button variant="link">
        <a href="https://zenn.dev/kmkkiii" target="_blank"><ZennIcon width={20} height={20} /></a>
      </Button>
    </div>
    <Separator className="my-4" />
    <div class="my-4">
      <p class="text-sm text-muted-foreground">
        © 2024 kmkkiii
      </p>
    </div>
  </div>
</footer>
